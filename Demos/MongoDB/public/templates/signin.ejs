<link rel="stylesheet" href="/stylesheets/signinStyle.css">


<div ng-app="homePageApp" ng-controller="homeController">

	<form id="signinForm">
		<div id="signinOutside">
			<div class="form-group">
				<input type="email" class="form-control" placeholder="Email" required="required" ng-model="user.username">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" required="required" ng-model="user.password">
			</div>
			<div ng-show="loginStatus" style="color: red">
				Username or password is not valid
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary" style="width: 100%" ng-click="signinUser(user)">SignIn</button>
			</div>
		</div>
	</form>

</div>