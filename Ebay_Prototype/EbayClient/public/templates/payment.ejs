<link rel="stylesheet" href="/stylesheets/profileStyle.css">

<div>
<div id="outer" class="form-group">
	<div style="outline: 2px solid #cccccc; margin-left: 5%;">
		<div style="float: left; width: 40%; margin-left: 10%; padding: 20px;">
			<div style="float: left; width: 30%; margin-left: 0%; padding: 20px;">
				Credit Card
				<hr>
			</div>
			<div
				style="float: right; width: 55%; margin-right: 5%;">
				<form>
				<div class="form-group">
					<label>Credit Card Number</label>
					<input class="form-control" type="number" maxlength="16" required="required" ng-model="checkout.card"/>
				</div>
				<div class="form-group">
					<label>Expiry Date</label>
					<div class="input-group">
						<input class="form-control" type="number" placeholder="MM"  min="1" max="12" required="required" style="width: 100px;"/>
						<input class="form-control" type="number" placeholder="YY" min="16" max="25" required="required" style="width: 100px;"/>
					</div>
				</div">
				<div class="form-group">
					<label>Security Code</label>
					<input class="form-control" type="number" maxlength="3" required="required" ng-model="checkout.cvv"/>
				</div>
				<div class="form-group">
					<label>Name on the Card</label>
					<input class="form-control" type="text" required="required" ng-model="checkout.name"/>
				</div>
				<div class="alert alert-danger" ng-show="status">
  					<strong>Enter the valid details</strong>
				</div>
				</form>
			</div>
		</div>
	</div>
		<div style="float: left; margin-left: 20%"><br><br><br>
			<div class="form-group">
				<label>Total Items : </label>
				<label>{{items}}</label>
			</div>
		<div>
			<label>Order Total : </label>
			<label>{{totalValue}}</label>
		</div>
		<div class="form-group">
			<button class="btn btn-success" ng-click=confirmCheckOut(checkout)> Confirm and Pay</button>
		</div>
	</div>
</div>
</div>